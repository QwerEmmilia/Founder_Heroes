{% extends 'base.html.twig' %}

{% block link %}<link rel="stylesheet" href="/css/login.css">{% endblock %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="box">
        <h1>Register</h1>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <button type="submit">Register</button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}

{% block extraJS %}

    <script>
        document.getElementById("registration_form_username").placeholder = "Username";
        document.getElementById("registration_form_plainPassword").placeholder = "Password";
    </script>

{% endblock %}
